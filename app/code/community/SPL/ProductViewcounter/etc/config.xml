<config>
	<modules>
		<SPL_ProductViewcounter>
			<version>0.1.0</version>
		</SPL_ProductViewcounter>
	</modules>
	<frontend>  
                <routers>
			<productviewcounter>
				<use>standard</use>
				<args>
					<module>SPL_ProductViewcounter</module>
					<frontName>product_view_counter</frontName>
				</args>
			</productviewcounter>
		</routers>
		<layout>
			<updates>
				<productviewcounter>
					<file>productviewcounter.xml</file>
				</productviewcounter>
			</updates>
		</layout>
	</frontend>
	<global>
		<helpers>
			<productviewcounter>
				<class>SPL_ProductViewcounter_Helper</class>
			</productviewcounter>
		</helpers>

		<blocks>
			<productviewcounter>
				<class>SPL_ProductViewcounter_Block</class>
			</productviewcounter>
		</blocks>


	</global>	
</config> 